<odoo>
    <record model="ir.ui.view" id="city_view_inherit">
        <field name="name">city.inherit.form</field>
        <field name="model">res.country.state</field>
        <field name="inherit_id" ref="base.view_country_state_form"/>
        <field name="arch" type="xml">

            <xpath expr="//sheet" position="inside">
                <notebook>
                <page name="city" string="Cities">
                    <field name="city_ids">
                        <tree editable="bottom">
                            <field name="name"/>
                            <field name="code"/>
                            <field name="active" column_invisible="1"/>
                            <field name="website_visible" column_invisible="1"/>
                        </tree>
                    </field>
                </page>
                <page name="city" string="Districts">
                    <field name="dist_ids">
                        <tree editable="bottom">
                            <field name="name"/>
                            <field name="city_id"/>
                            <field name="code"/>
                            <field name="active" column_invisible="1"/>
                            <field name="website_visible" column_invisible="1"/>
                        </tree>
                    </field>
                </page>
                </notebook>
            </xpath>
        </field>
    </record>
    <record id="partner_inherit_form" model="ir.ui.view">
        <field name="name">partner.inherit.form</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='street2']" position="after">
                <field name="city_id"  placeholder="City" class="o_address_state"/>
                <field name="dist_id"  placeholder="District" class="o_address_state"/>
            </xpath>
        </field>
    </record>

</odoo>