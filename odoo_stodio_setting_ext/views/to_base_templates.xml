<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record model="ir.ui.view" id="odoo_studio_res_country_state_tree">
        <field name="name">Odoo Studio: res.country.state.tree customization</field>
        <field name="model">res.country.state</field>
        <field name="inherit_id" ref="base.view_country_state_tree"/>
        <field name="arch" type="xml">
            <xpath expr="//tree[1]" position="attributes">
                <attribute name="editable"/>
                <attribute name="default_group_by">country_id</attribute>
            </xpath>
        </field>
    </record>

    <record model="ir.ui.view" id="odoo_studio_res_partner_tree">
        <field name="name">Odoo Studio: res.partner.tree customization</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_tree"/>
        <field name="arch" type="xml">

            <xpath expr="//field[@name='display_name']" position="before">
                <field name="company_registry" optional="show" string="Company"/>
            </xpath>
            <xpath expr="//field[@name='phone']" position="after">
                <field name="x_studio_phone_2" optional="show"/>
                <field name="mobile" optional="show"/>
            </xpath>
            <xpath expr="//field[@name='email']" position="after">
                <field name="website" optional="show"/>
            </xpath>
            <xpath expr="//field[@name='country_id']" position="after">
                <field name="ref" optional="show"/>
            </xpath>
        </field>
    </record>
    <record model="ir.ui.view" id="odoo_studio_product_template_tree">
        <field name="name">Odoo Studio: product.template.tree customization</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_tree_view"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='priority']" position="after">
                <field name="image_1920" optional="show" widget="image"/>
            </xpath>
            <xpath expr="//tree[1]/field[@name='name']" position="attributes">
                <attribute name="options">{"dynamic_placeholder":false}</attribute>
            </xpath>
            <xpath expr="//field[@name='virtual_available']" position="after">
                <field name="allow_out_of_stock_order" optional="show"/>
            </xpath>

        </field>
    </record>
    <record model="ir.ui.view" id="odoo_studio_product_template_form">
        <field name="name">Odoo Studio: product.template.product.form customization</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_only_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='uom_id']" position="attributes">
                <attribute name="groups"/>
                <attribute name="invisible">False</attribute>
            </xpath>
            <xpath expr="//field[@name='uom_po_id']" position="attributes">
                <attribute name="groups"/>
                <attribute name="invisible">False</attribute>
            </xpath>
            <xpath expr="//field[@name='create_repair']" position="attributes">
                <attribute name="invisible">False</attribute>
            </xpath>
            <xpath expr="//field[@name='default_code']" position="attributes">
                <attribute name="string">Seller SKU</attribute>
            </xpath>

        </field>
    </record>
    <record model="ir.ui.view" id="odoo_studio_product_product_form">
        <field name="name">Odoo Studio: product.product.form customization</field>
        <field name="model">product.product</field>
        <field name="inherit_id" ref="product.product_normal_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='default_code']" position="attributes">
                <attribute name="string">Seller SKU</attribute>
            </xpath>
        </field>
    </record>
    <record model="ir.ui.view" id="odoo_studio_product_pricelist_form">
        <field name="name">Odoo Studio: product.pricelist.form customization</field>
        <field name="model">product.pricelist</field>
        <field name="inherit_id" ref="product.product_pricelist_view"/>
        <field name="arch" type="xml">
            <xpath expr="//form[1]/sheet[1]/notebook[1]/page[@name='pricelist_rules']/field[@name='item_ids']/tree[1]/field[@name='product_tmpl_id']"
                   position="after">
                <field optional="hide" name="x_studio_product_category" column_invisible="False" readonly="True"
                       invisible="False"/>
            </xpath>
            <xpath expr="//field[@name='product_id']" position="after">
                <field optional="hide" name="x_studio_product_variant_category" readonly="True"/>
            </xpath>

        </field>
    </record>
    <record model="ir.ui.view" id="odoo_studio_delivery_carrier_form">
        <field name="name">Odoo Studio: delivery.carrier.form customization</field>
        <field name="model">delivery.carrier</field>
        <field name="inherit_id" ref="delivery.view_delivery_carrier_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='currency_id']" position="attributes">
                <attribute name="invisible">False</attribute>
            </xpath>
        </field>
    </record>
    <record model="ir.ui.view" id="odoo_studio_product_category_form">
        <field name="name">Odoo Studio: product.category.form customization</field>
        <field name="model">product.category</field>
        <field name="inherit_id" ref="product.product_category_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//form[1]/sheet[1]/group[not(@name)][1]/group[not(@name)][1]/div[1]/field[@name='property_valuation']"
                   position="attributes">
                <attribute name="groups"/>
                <attribute name="invisible">False</attribute>
            </xpath>
            <xpath expr="//group[@name='account_stock_property']" position="attributes">
                <attribute name="groups"/>
                <attribute name="invisible">False</attribute>
            </xpath>
            <xpath expr="//form[1]/sheet[1]/group[@name='account_property']/group[@name='account_stock_property']/field[@name='property_valuation']"
                   position="attributes">
                <attribute name="invisible">False</attribute>
            </xpath>

        </field>
    </record>
    <record model="ir.ui.view" id="odoo_studio_res_partner_form">
        <field name="name">Odoo Studio: res.partner.form customization</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_form"/>
        <field name="arch" type="xml">
            <xpath expr="//form[1]/sheet[1]/group[1]/group[2]/div[1]" position="after">
                <field name="x_studio_phone_2" string="Phone 2"/>
            </xpath>
            <xpath expr="//field[@name='child_ids']" position="after">
                <field name="x_studio_social_media" string="Social Media"/>
            </xpath>

        </field>
    </record>
</odoo>