<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="product_category_inherit_view_form" model="ir.ui.view">
        <field name="name">product.category.inherit.view</field>
        <field name="model">product.category</field>
        <field name="inherit_id" ref="product.product_category_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='parent_id']" position="after">
                <field name="service_charges"/>
            </xpath>
        </field>
    </record>

    <record id="view_delivery_price_rule_form_inherit" model="ir.ui.view">
        <field name="name">delivery.price.rule.form</field>
        <field name="model">delivery.price.rule</field>
        <field name="inherit_id" ref="delivery.view_delivery_price_rule_form"/>
        <field name="arch" type="xml">
            <xpath expr="///field[@class='oe_inline'][3]" position="after">
                <field name="categ_id" force_save="1" class="oe_inline"/>
            </xpath>
        </field>
    </record>


</odoo>