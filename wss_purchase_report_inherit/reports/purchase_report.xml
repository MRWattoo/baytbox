<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<template id="report_purchaseorder_document_inherit" inherit_id="purchase.report_purchaseorder_document">

	<xpath expr="//th[1]" position="after">
                                <th name="th_description"><strong>Image</strong></th>


	</xpath>
	<xpath expr="//td[@id='product'][1]" position="after">
        <td>
            <img style="margin:auto; text-align:center; height:40px; width:40px;"
                 t-att-src="docs.image_data_uri(line.product_id.image_1920)"
                 t-if="line.product_id.image_1920"/>
        </td>
    </xpath>
	<xpath expr="//p[@class='mt-4'][1]" position="after">
        <p>
            This document is computer generated and does not require company's signature or stamp in order to be considered valid
        </p>
    </xpath>
	</template>


</odoo>

